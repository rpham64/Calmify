<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.rpham64.android.calmify"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".CalmifyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/calmify_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.CalmifyPagerActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".ui.playback.MusicService" />
    </application>

</manifest>